<div class="container createWorkoutlog-container">

  {{!-- modal code --}}
  <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">Confirm?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this workout log?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button id="modalConfirmDelete" type="button" data-workoutid="{{workoutLog.workout}}"  data-workoutlogid="{{workoutLog._id}}" class="btn btn-danger">Delete</button> 
        </div>
      </div>
    </div>
  </div>

  {{!-- rest of page --}}
  <div class="d-flex row">
    <h1 class="mr-auto">Workout Log for "{{workout.name}}"</h1>
    <div class="ml-auto mt-2">
      <a id="viewButton" class="btn btn-primary mr-1" href="/workout/{{workoutLog.workout}}">View Workout</a>
      {{!-- TODO --}}
      <button id="editButton" class="btn btn-outline-primary mr-1">Edit Log</button>
      {{!-- TODO --}}
      <button id="deleteLogButton" class="btn btn-danger" data-toggle="modal" data-target="#confirmModal">Delete Log</button>
    </div>
  </div>

  <div class="card mb-2">
    <div class="card-body">
      <div class="form-group row">
        <div class="col-sm-4 col-form-label">Intensity (0-5)</div>
        <div class="col-sm-8">
          <div id="intensity" name="intensity">{{workoutLog.logInfo.intensity}}</div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4 col-form-label">Length (Minutes)</div>
        <div class="col-sm-8">
          <div id="length" name="length">{{workoutLog.logInfo.length}} minutes</div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4 col-form-label">Date of logged workout</div>
        <div class="col-sm-8">
          <div id="date" name="date">{{dateFormat workoutLog.logInfo.date "dddd, MMMM Do YYYY, h:mm a"}}</div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4 col-form-label">Comment</div>
        <div class="col-sm-8">
          <div id="comment" name="comment">{{workoutLog.logInfo.comment}}</div>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-2">
    <div class="card-body">
      <h3>Exercises</h3>
      <div id="loggedExercises">
        {{#each exercises}} 
        <div class="card mb-2" id="workoutlog-exerice">
          <div class="card-body">
            <h4 class="card-title">{{innerExercise.name}}</h4>

            <div class="form-group row">
              <div class="col-sm-4 col-form-label">Sets</div>
              <div class="col-sm-8">
                <div id="exerciseSet" name="exerciseSet">{{sets}}</div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-4 col-form-label">Reps</div>
              <div class="col-sm-8">
                <div id="exerciseReps" name="exerciseReps">{{repetitions}}</div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-4 col-form-label">Rest</div>
              <div class="col-sm-8">
                <div id="exerciseRest" name="exerciseRest">{{rest}} sec.</div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-4 col-form-label">Weight</div>
              <div class="col-sm-8">
                <div id="exerciseWeight" name="exerciseWeight">{{weight}} lbs</div>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-4 col-form-label">Note</div>
              <div class="col-sm-8">
                <div id="exerciseNote" name="exerciseNote">{{comment}}</div>
              </div>
            </div>

          </div>
        </div>  
        {{/each}} 
      </div> 
    </div>
  </div>
  <script src="../../public/js/viewWorkoutlog.js"></script>
</div>